<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mobile_navigation"
            app:startDestination="@id/homeFragment">

    <fragment
            android:id="@+id/homeFragment"
            android:name="com.jksalcedo.imagemeta.ui.home.HomeFragment"
            android:label="Home">
        <action
                android:id="@+id/action_home_to_edit"
                app:destination="@id/editFragment" />
        <argument
                android:name="imageUri"
                app:argType="string" />

    </fragment>

    <fragment
            android:id="@+id/editFragment"
            android:name="com.jksalcedo.imagemeta.ui.edit.EditFragment"
            android:label="Edit Metadata">
        <argument
                android:name="imageUri"
                app:argType="string" />
        <action
                android:id="@+id/action_edit_to_save"
                app:destination="@id/saveFragment">
            <argument
                    android:name="success"
                    app:argType="boolean" />
        </action>
    </fragment>

    <fragment
            android:id="@+id/saveFragment"
            android:name="com.jksalcedo.imagemeta.ui.save.SaveFragment"
            android:label="Save Confirmation">
        <argument
                android:name="success"
                app:argType="boolean" />
    </fragment>
</navigation>